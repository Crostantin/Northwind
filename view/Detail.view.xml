<mvc:View controllerName="com.test.northwind.view.Detail" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page class="sapUiFioriObjectPage" navButtonPress="onNavBack" showNavButton="{device>/isPhone}" title="{i18n>detailTitle}">
		<content>
			<ObjectHeader
				number="{i18n>currencySymbol}{UnitPrice}" 
				numberUnit="{QuantityPerUnit}" 
				title="{ProductName}">
							
				<ObjectAttribute text="{ProductID}" title="{i18n>label_ProductID}"/>
				<ObjectAttribute text="{UnitsInStock}" title="{i18n>label_UnitsInStock}"/>
				<ObjectAttribute text="{UnitsOnOrder}" title="{i18n>label_UnitsOnOrder}"/>
			</ObjectHeader>
			<IconTabBar id="idIconTabBar" select="onDetailSelect">
				<items>
					<IconTabFilter icon="sap-icon://hint" key="Supplier" text="Supplier">
						<!--key="Detail" -->
						<content>
							<core:Fragment fragmentName="com.test.northwind.view.DetailInfoForm" type="XML"/>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Toolbar></Toolbar>
		</footer>
	</Page>
</mvc:View>